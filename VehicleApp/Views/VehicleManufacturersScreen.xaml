<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:VehicleApp.Service.Models" xmlns:viewmodels="clr-namespace:VehicleApp.ViewModels"
             Title="{Binding Title}"
             x:Class="VehicleApp.Views.VehicleManufacturersScreen">


<!--
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
-->


    <RefreshView x:DataType="viewmodels:VehicleManufacturersViewModel" Command="{Binding LoadManufsCommand}">
        <CollectionView x:Name="ItemsListView"
                ItemsSource="{Binding Manufacturers}"
                SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" x:DataType="local:VehicleManufacturer">
                        <Label Text="{Binding Name}" 
                            LineBreakMode="NoWrap" 
                            Style="{DynamicResource ListItemTextStyle}" 
                            FontSize="16" />

                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>

</ContentPage>