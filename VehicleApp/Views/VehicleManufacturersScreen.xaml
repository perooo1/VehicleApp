             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:VehicleApp.Service.Models" 
             xmlns:viewmodels="clr-namespace:VehicleApp.ViewModels"
             Title="{Binding Title}"
             x:Class="VehicleApp.Views.VehicleManufacturersScreen">


